<% include partials/header %>

<header class="pb-3">
    <div class="container text-center">
        <div class="d-flex flex-row justify-content-center d-flex align-items-center flex-sm-nowrap">
            <img class="img-fluid" src="/images/9.jpg" alt="image">
            <div class="container">
                <h1>Wellcome To YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
            </div>
            <img class="img-fluid" src="/images/15.jpg" alt="image">
        </div>
        <p>
            <a href="/campgrounds/new" class="btn bg-success text-white btn-large">Add New Campground</a>
        </p>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most popular Campgrounds!</h3>
        </div>
    </div>

    <div class="row">
        <% campgrounds.map(campground => {%>
        <div class='col-md-3 col-sm-6'>
            <figure class="figure">
                <img src="<%= campground.image %>" class="figure-img img-fluid rounded" alt="<%= campground.name %>">
                <figcaption class="figure-caption text-right">
                    <h4><%= campground.name %></h4>
                </figcaption>
            </figure>
        </div>
        <%}); %>
    </div>
</div>


<% include partials/footer %>