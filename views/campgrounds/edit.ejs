<% include ../partials/header %>
<div class="container mt-5">
    <div class="d-flex flex-column align-items-center">
        <h3 class='text-center color-coral font pb-3'>Edit <%= campground.name %></h3>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[image]" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <button class="btn bg-warning text-white btn-large btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds" class="btn btn-link color-coral">GO BACK</a>
    </div>
</div>


<% include ../partials/footer %>