<% include ../partials/header %>
<div class="container mt-5">
    <div class="d-flex flex-column align-items-center">
        <h3 class='text-center color-coral font pb-3'>Create a new Campground</h3>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="price">
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="3" name="description" placeholder="description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn bg-warning text-white btn-large btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds" class="btn btn-link color-coral">GO BACK</a>
    </div>
</div>


<% include ../partials/footer %>