<% include partials/header %>
<div class="container mt-3">
    <div class="d-flex flex-column align-items-center">
        <h1 class='text-center'>Create a new Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn bg-success text-white btn-large btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds" class="btn btn-link text-success">GO BACK</a>
        </div>
    </div>
</div>


<% include partials/footer %>